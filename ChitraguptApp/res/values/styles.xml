<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/blue</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/blue1</item>

        <!--
         colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets
        -->
        <item name="colorAccent">@color/blue6</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="AppTheme.White" parent="AppBaseTheme">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
         <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.Black" parent="AppBaseTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <!-- Text styles -->
    <style name="Text">
        <!--  <item name="android:textColor">@color/black</item> -->
    </style>

    <style name="Text.Label">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="Text.Heading">
        <item name="android:textSize">@dimen/text_xxlarge</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_xxxlarge</item>
    </style>

</resources>